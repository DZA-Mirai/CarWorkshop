@model Employee

<h1>Are you sure you want to delete this Employee?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" disabled>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" class="form-control" disabled>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Login">Login</label>
        <input asp-for="Login" class="form-control" disabled>
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" disabled>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Birth Date</label>
        <input asp-for="BirthDate" type="date" class="form-control" disabled>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Gender</label>
        <select asp-for="Gender" class="form-control" id="exampleFormControlSelect1" disabled>
            <option selected disabled>Choose...</option>
            <option>Male</option>
            <option>Female</option>
            <option>I prefer not to say</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkingSince">Working Since</label>
        <input asp-for="WorkingSince" type="date" class="form-control" disabled>
        <span asp-validation-for="WorkingSince" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAdmin">Administrator</label>
        <input asp-for="IsAdmin" class="form-check-input" type="checkbox" disabled>
        <span asp-validation-for="IsAdmin" class="text-danger"></span>
    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>
