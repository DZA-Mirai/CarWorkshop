@using CarWorkshop.ViewModels
@model PartsViewModel

<h1>Add Parts</h1>

<form method="post" asp-action="AddParts">
    <input type="hidden" asp-for="TicketId">
    <div class="form-group">
        <label asp-for="NewPart.PartName">Name:</label>
        <input asp-for="NewPart.PartName" class="form-control" placeholder="Part Name">
        <span asp-validation-for="NewPart.PartName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPart.Amount">Amount:</label>
        <input asp-for="NewPart.Amount" class="form-control" placeholder="Amount">
        <span asp-validation-for="NewPart.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPart.UnitPrice">UnitPrice:</label>
        <input asp-for="NewPart.UnitPrice" class="form-control" placeholder="UnitPrice">
        <span asp-validation-for="NewPart.UnitPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>